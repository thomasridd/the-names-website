---
pagination:
  data: tags
  size: 1
  alias: tag
permalink: /tags/{{ tag.slug }}/
---

{% extends "base.njk" %}

{% block title %}{{ tag.name }} Names - {{ siteConfig.title }}{% endblock %}
{% block description %}Browse all {{ tag.name }} names: {{ tag.description }}{% endblock %}

{% block content %}
<article class="bg-white rounded-lg p-8 shadow-sm">
  <div class="mb-8">
    <div class="mb-2">
      <a href="/tags/" class="text-blue-600 hover:text-blue-700 text-sm">&larr; All Tags</a>
    </div>
    <h1 class="text-4xl font-bold mb-2 text-gray-900">{{ tag.name }}</h1>
    <p class="text-lg text-gray-600 mb-4">{{ tag.description }}</p>
    <p class="text-sm text-gray-500">
      {{ tag.count }} names with this tag
    </p>
  </div>

  {% set boys = tag.names | filterByGender('Boy') %}
  {% set girls = tag.names | filterByGender('Girl') %}

  <div class="grid md:grid-cols-2 gap-8">
    {% if boys.length > 0 %}
    <div class="bg-gradient-to-br from-purple-50 to-indigo-50 rounded-lg p-6 border border-purple-200">
      <h2 class="text-2xl font-bold mb-4 text-purple-900">Boys' Names ({{ boys.length }})</h2>
      <ul class="space-y-2">
        {% for name in boys | sort(false, false, 'rank') %}
        <li class="flex justify-between items-center">
          <a href="/names/boy/{{ name.uniqueSlug }}/" class="text-purple-600 hover:text-purple-800 font-medium hover:underline">
            {{ name.name }}
          </a>
          {% if name.rank %}
          <span class="text-sm text-gray-600">#{{ name.rank }}</span>
          {% endif %}
        </li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}

    {% if girls.length > 0 %}
    <div class="bg-gradient-to-br from-pink-50 to-rose-50 rounded-lg p-6 border border-pink-200">
      <h2 class="text-2xl font-bold mb-4 text-pink-900">Girls' Names ({{ girls.length }})</h2>
      <ul class="space-y-2">
        {% for name in girls | sort(false, false, 'rank') %}
        <li class="flex justify-between items-center">
          <a href="/names/girl/{{ name.uniqueSlug }}/" class="text-pink-600 hover:text-pink-800 font-medium hover:underline">
            {{ name.name }}
          </a>
          {% if name.rank %}
          <span class="text-sm text-gray-600">#{{ name.rank }}</span>
          {% endif %}
        </li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}
  </div>
</article>
{% endblock %}
