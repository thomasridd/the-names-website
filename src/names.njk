---
layout: base.njk
title: All Names
permalink: /names/
---

{% block content %}
<section class="names-listing">
  <h2>All Names</h2>
  <p>Browse our collection of {{ names | length }} names.</p>

  <div class="search-box">
    <input type="text" id="search-input" placeholder="Search names...">
    <div id="search-results"></div>
  </div>

  <div class="names-list">
    {% for nameData in names | sort(false, false, 'name') %}
    <article class="name-item">
      <h3><a href="/names/{{ nameData.name | lower | replace(' ', '-') }}/">{{ nameData.name }}</a></h3>
      <p class="details">
        <span class="origin">{{ nameData.origin }}</span>
        {% if nameData.gender %} | <span class="gender">{{ nameData.gender }}</span>{% endif %}
        {% if nameData.popularity %} | <span class="popularity">{{ nameData.popularity }}</span>{% endif %}
      </p>
      <p class="meaning">{{ nameData.meaning }}</p>
    </article>
    {% endfor %}
  </div>
</section>
{% endblock %}
