  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% block title %}{{ siteConfig.title }}{% endblock %}</title>
  <meta name="description" content="{% block description %}{{ siteConfig.description }}{% endblock %}">
  <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
  <header>
    <nav>
      <h1><a href="/">{{ siteConfig.title }}</a></h1>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/names/">Browse Names</a></li>
      </ul>
    </nav>
  </header>

  <main>
    {% block content %}{% endblock %}
  </main>

  <footer>
    <p>&copy; 2025 {{ siteConfig.title }}. A website for thinking about names.</p>
  </footer>

  <script src="/scripts/search.js"></script>
