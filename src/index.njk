  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for nameData in names | slice(0, 6) %}
    <div class="name-card bg-white hover:shadow-lg transition-shadow duration-200">
      <h3 class="text-2xl font-bold mb-2">
        <a href="/names/{{ nameData.name | lower | replace(' ', '-') }}/" class="text-blue-600 hover:text-blue-800 transition-colors">
          {{ nameData.name }}
        </a>
      </h3>
      <p class="text-sm text-gray-500 uppercase tracking-wide mb-3 font-medium">{{ nameData.origin }}</p>
      <p class="text-gray-700 leading-relaxed">{{ nameData.meaning }}</p>
      {% if nameData.popularity %}
      <div class="mt-3 pt-3 border-t border-gray-100">
        <span class="text-xs text-gray-500">Popularity: {{ nameData.popularity }}</span>
      </div>
      {% endif %}
    </div>
    {% endfor %}
  </div>
</section>

