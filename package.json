{
  "name": "the-names-website",
  "version": "1.0.0",
  "description": "a website for thinking about names",
  "main": "index.js",
  "scripts": {
    "build:css": "postcss src/styles/main.css -o _site/styles/main.css",
    "build:eleventy": "NODE_OPTIONS='--max-old-space-size=8192' eleventy",
    "build": "npm run build:eleventy && npm run build:css",
    "build:dev": "USE_DEV_DATA=true npm run build",
    "watch:css": "postcss src/styles/main.css -o _site/styles/main.css --watch",
    "watch:eleventy": "NODE_OPTIONS='--max-old-space-size=8192' eleventy --serve",
    "watch:eleventy:dev": "USE_DEV_DATA=true eleventy --serve",
    "dev": "npm run build:css && npm-run-all --parallel watch:*",
    "dev:fast": "npm run dev:data && npm run build:css && USE_DEV_DATA=true npm-run-all --parallel watch:css watch:eleventy:dev",
    "dev:data": "node scripts/create-dev-data.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "http://local_proxy@127.0.0.1:63521/git/thomasridd/the-names-website"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@tailwindcss/postcss": "^4.1.17",
    "autoprefixer": "^10.4.22",
    "csv-parse": "^6.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.17"
  },
  "dependencies": {
    "fuse.js": "^7.1.0"
  }
}
